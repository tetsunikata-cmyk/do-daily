<div class="mobile-layout">
  <div class="content-card">
    <%= link_to "EDIT", mypage_path, class: "edit-anchor" %>
    <% if @user.goal_image.attached? %>
      <%= image_tag @user.goal_image, class: "hero-img" %>
    <% else %>
      <div style="height: 200px; background: #0a0a0a;"></div>
    <% end %>
  </div>

  <div class="content-card goal-inner">
    <%= link_to "EDIT", mypage_path, class: "edit-anchor" %>
    <span class="label-text">達成したい文言</span>
    <p class="main-vision-text">
      <%= @user.vision_text.presence || "2030年にエンジニアリングマネージャーになる。" %>
    </p>
  </div>

  <%= link_to "目標実現ボタン", roadmap_path, class: "btn-primary" %>

  <nav class="bottom-nav-grid">
    <%= link_to "道しるべを見る", roadmap_path, class: "nav-box" %>
    <%= link_to "振り返りを見る", reviews_path, class: "nav-box" %>
    <%= link_to "My page", mypage_path, class: "nav-box" %>
    <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-box" %>
  </nav>
</div>