<h1>DO DAILY.</h1>
<p>You already know what to do.</p>

<%= link_to "New Habit", new_habit_path %>

<ul>
  <% @habits.each do |habit| %>
    <% today_log = habit.habit_logs.find_by(done_on: Date.current) %>

    <li>
      <%= habit.title %>

      <span>Streak: <%= habit.current_streak %> days</span>

      <% if today_log.present? %>
        <span>Done today âœ…</span>
        <%= button_to "Undo", habit_habit_log_path(habit), method: :delete %>
      <% else %>
        <%= button_to "Do today", habit_habit_log_path(habit), method: :post %>
      <% end %>

      <%= link_to "Edit", edit_habit_path(habit) %>
      <%= link_to "Delete", habit_path(habit), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>