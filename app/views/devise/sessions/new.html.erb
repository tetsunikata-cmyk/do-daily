<div class="page">
  <div class="page-header">ログイン</div>

  <div class="black-card">
    <h2 style="margin-bottom: 12px;">アカウントにログイン</h2>

    <%= form_with scope: resource_name,
                  url: session_path(resource_name),
                  local: true do |f| %>

      <div style="margin-bottom: 12px;">
        <%= f.label :email, "メールアドレス" %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>

      <div style="margin-bottom: 12px;">
        <%= f.label :password, "パスワード" %><br>
        <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div style="margin-bottom: 12px;">
          <label style="display:flex;gap:8px;align-items:center;">
            <%= f.check_box :remember_me %>
            <span>ログイン状態を保持する</span>
          </label>
        </div>
      <% end %>

      <%= f.submit "ログイン", class: "nav-button", style: "width: 100%;" %>
    <% end %>

    <div style="margin-top: 14px; display:flex; gap:10px; flex-wrap:wrap;">
      <%= link_to "新規登録", new_registration_path(resource_name), class: "review-link" %>
      <%= link_to "パスワードを忘れた", new_password_path(resource_name), class: "review-link" %>
    </div>
  </div>

  <nav class="nav-grid">
    <%= link_to "TOPへ戻る", root_path, class: "nav-button" %>
  </nav>
</div>