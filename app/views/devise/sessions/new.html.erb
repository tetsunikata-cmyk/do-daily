<div class="top-hero-page">
  <div class="hero-glow"></div>
  
  <div class="hero-card">
    <header class="hero-header">
      <h1 class="hero-title">Welcome</h1>
      <p class="hero-subtitle">Enter your credentials</p>
    </header>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "hero-actions" }) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "cta-input" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "cta-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="remember-me">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン状態を保持する" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "cta-button" %>
      </div>
    <% end %>

    <div class="hero-footer-links">
      <%= render "devise/shared/links" %>
      <br>
      <%= link_to "TOPへ戻る", root_path, class: "back-link" %>
    </div>
  </div>
</div>